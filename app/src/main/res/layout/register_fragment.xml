<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:text="注册"
        android:textColor="@color/red"
        android:textSize="24sp"
        android:textStyle="bold"
        android:transitionName="title" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/account_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:hint="请输入账号"
        android:lines="1"
        android:transitionName="one_input"
        app:met_clearButton="true"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="账号"
        app:met_iconLeft="@drawable/ic_wifi"
        app:met_maxCharacters="20"
        app:met_minCharacters="1"
        app:met_primaryColor="@color/red" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/pwd_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:lines="1"
        android:transitionName="two_input"
        app:met_clearButton="true"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="密码"
        app:met_iconLeft="@drawable/ic_pwd"
        app:met_maxCharacters="20"
        app:met_minCharacters="1"
        app:met_primaryColor="@color/red" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/register_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="24dp"
        android:background="@color/orange"
        android:text="立即注册"
        android:textColor="@color/white"
        android:transitionName="one_btn" />

</LinearLayout>